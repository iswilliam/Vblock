# Database Configuration
MONGODB_URI=mongodb://localhost:27017/educhain
# For MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/educhain

# Ethereum Network Configuration
INFURA_PROJECT_ID=your_infura_project_id_here
PRIVATE_KEY=your_wallet_private_key_here
CONTRACT_ADDRESS=your_deployed_contract_address_here

# For Sepolia Testnet
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id_here

# For Polygon Mumbai Testnet (Alternative)
# ETHEREUM_RPC_URL=https://polygon-mumbai.infura.io/v3/your_infura_project_id_here

# API Keys for Contract Verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration (for enhanced auth)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=24h

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100